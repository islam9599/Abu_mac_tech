    <div class="shop_menu_frame">
      <div class="shop_container">
        <div class="dish_table">
          <span class="new_dish_txt">
            <%=member.mb_nick.toUpperCase()%> Shop Menyusi</span
          >

          <table class="table table-bordered table-hover">
            <thead class="thead-light">
              <th scope="col">T/r</th>
              <th scope="col">Brand nomi</th>
              <th scope="col">Brand turi</th>
              <th scope="col">Qurilma tezkor xotirasi</th>
              <th scope="col">Qurilma narxi</th>
              <th scope="col">Qurilma qoldiq miqdori</th>
              <th scope="col">Qurilma holati</th>
              <th scope="col">Qurilmani edit qilish</th>
            </thead>

            <% shop_data.map((value, key) => { %>

            <tbody style="background-color: #fff">
              <td><%= key + 1 %></td>
              <td><%= value.product_name %></td>
              <td><%= value.product_collection %></td>
              <td>
                <%= value.product_memory %>
              </td>
              <td><%= value.product_price %></td>
              <td><%= value.product_left_cnt %></td>
              <td>
                <select
                  class="spec_select new_product_status "
                  id="<%= value._id %>"
                >
                  <option value="PAUSED"  <%= value.product_status === 'PAUSED' ? 'selected' : ''
                    %>>
                   PAUSED
                  </option>
                  <option value="PROCESS"  <%= value.product_status === 'PROCESS' ? 'selected' : ''
                    %>>
                   PROCESS
                  </option>
                </select>
              </td>
              <td>
               <button class="spec_select product_edit">Edit product</button>
              </td>
            </tbody>

            <%}); %>
          </table>

          <div
            class="long_input"
            style="align-items: flex-end; margin-bottom: 25px"
