            <button class="btn btn-primary hidding_btn">Elektron qo'shish</button>
          </div>
        </div>
        <form
          onsubmit="return validateForm()"
          class="product_container"
          action="/abu_tech/products/create"
          method="POST"
          enctype="multipart/form-data"
        >
          <div class="long_input" style="display: flex; align-items: center">
            <span class="new_dish_txt">Yangi Elektron Qurilma</span>
          </div>

          <div>
            <div class="long_input">
              <label for="">Qurilma Nomi</label>
              <input
                type="text"
                placeholder="Qurilma Nomi"
                name="product_name"
                class="product_name"
              />
            </div>
            <input
              type="text"
              name="product_status"
              value="PAUSED"
              class="product_status"
              hidden
            />
          </div>

          <div class="half_input_frame">
            <div class="half_input">
              <label for="">Qurilma Narxi</label>
              <input
                type="number"
                placeholder="Qurilma Narxi"
                name="product_price"
                class="product_price"
              />
            </div>

            <div class="half_input">
              <label for="">Qurilma qoldiq miqdori</label>
              <input
                type="number"
                placeholder="Qurilma qoldiq miqdori"
                name="product_left_cnt"
                class="product_left_cnt"
              />
            </div>
          </div>
          <div class="half_input_frame">
            <div class="half_input">
              <label for="">Qurilma Turi</label>
              <select
                class="product_collection"
                name="product_collection"
                id=""
              >
                <option value="pc" selected>PC</option>
                <option value="laptop">Notebook</option>
                <option value="phone">Phone</option>
                <option value="accessories">Accessories</option>
            
              </select>
            </div>

            <div class="half_input" id="product_memory">
              <label for="">Qurilma Ichki Xotira Hajmi</label>
              <select class="product_memory" name="product_memory" id="">
                <option value="8">8gb</option>
                <option value="16" selected>16gb</option>
                <option value="32">32gb</option>
                <option value="64">64gb</option>
              </select>
            </div>

          </div>
             <div class="half_input_frame">
            <div class="half_input">
              <label for="">Qurilma Rangi</label>
              <select
                class="product_color"
                name="product_color"
                id=""
              >
                <option value="gold" selected>Gold</option>
                <option value="silver">Silver</option>
                <option value="titanium">Titanium</option>
                <option value="gray">Gray</option>
                <option value="etc">Boshqalar</option>
              </select>
            </div>

            <div class="half_input" id="product_brand">
              <label for="">Qurilma Brand</label>
              <select class="product_brand" name="product_brand" id="">
                <option value="apple">Apple</option>
                <option value="samsung" selected>Samsung</option>
                <option value="xiaomi">Xiaomi</option>
                <option value="microsoft">Microsoft</option>
                <option value="etc">Etc</option>
              </select>
            </div>

          </div>
          <div class="long_input">
            <label for="">Qurilma haqida</label>
            <textarea
              name="product_description"
              class="product_description"
              id=""
              cols="30"
              rows="10"
            ></textarea>
          </div>

          <div class="img_frame">
            <label for="">Qurilma Rasmlari</label>
            <div class="media_frame">
              <div class="upload_img_box">
                <img
                  src="/images/upload.png"
                  class="1"
                  id="image_section_1"
                  alt=""
                />
                <input
                  type="file"
                  id="file"
                  name="product_images"
                  class="image_one"
                  onchange="previewFileHandler(this, 1)"
                />
              </div>

              <div class="upload_img_box">
                <img
                  src="/images/upload.png"
                  class="2"
                  id="image_section_2"
                  alt=""
                />
                <input
                  type="file"
                  id="file"
                  name="product_images"
                  class="image_two"
                  onchange="previewFileHandler(this, 2)"
                />
              </div>

              <div class="upload_img_box">
                <img
                  src="/images/upload.png"
                  class="3"
                  id="image_section_3"
                  alt=""
                />
                <input
                  type="file"
                  id="file"
                  name="product_images"
                  class="image_three"
                  onchange="previewFileHandler(this, 3)"
                />
              </div>

              <div class="upload_img_box">
                <img
                  src="/images/upload.png"
                  class="4"
                  id="image_section_4"
                  alt=""
                />
                <input
                  type="file"
                  id="file"
                  name="product_images"
                  class="image_four"
                  onchange="previewFileHandler(this, 4)"
                />
              </div>

              <div class="upload_img_box">
                <img
                  src="/images/upload.png"
                  class="5"
                  id="image_section_5"
                  alt=""
                />
                <input
                  type="file"
                  id="file"
                  name="product_images"
                  class="image_five"
                  onchange="previewFileHandler(this, 5)"
                />
              </div>

              <input
                value="<%= member._id %>"
                name="shop_mb_id"
                class="shop_mb_id"
                hidden
              />
            </div>
          </div>

          <div
            class="long_input"
            style="align-items: flex-end; margin-bottom: 25px"
          >
            <button type="submit" class="btn btn-primary">
